extends base.pug 

block scripts
  script(src='../static/index.js')

block style
    style 
        include ../static/style.css 
        include ../static/styleContact.css 

block content
    div.container 
        h1 Contact Us 
        form(action="/contact" method="post", class="myForm")
            input(type="text", class="myInput", name="name1", placeholder="Enter Your Name") 
            input(type="email", class="myInput", name="email", placeholder="Enter Your E-mail") 
            input(type="password", class="myInput", name="password", placeholder="Enter Your Password") 
            input(type="number", class="myInput", name="phone", placeholder="Enter Your Phone No.") 
            button(class="btn")
                | submit 
        